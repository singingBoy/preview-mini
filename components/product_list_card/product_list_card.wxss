@import "../../font/iconfont.wxss";
@import "../../font/font.wxss";
@import "./template/banner/banner_image.wxss";
@import "./template/float/float_images.wxss";
@import "./template/side/image_left_right.wxss";
@import "./template/list/image_list.wxss";

.d-flex{
  display: flex;
}
.pro-card{
  background-color: #ffffff;
  padding: 25rpx 0;
  margin-bottom: 15rpx;
}
.pro-title {
  font-size: 32rpx;
  color: #2A2A2A;
  line-height: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.pro-subtitle {
  font-size: 28rpx;
  color: #676767;
  line-height: 42rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.pro-footer{
  padding: 20rpx 30rpx;
}

.pro-statics{
  justify-content: space-between;
  align-items: flex-end;
}

.pro-card .icon-attentionfavorfill{
  color: #B0B0B0;
  font-size: 22rpx;
}
.pro-card .taste-icon{
  color: #2A2A2A;
  font-size: 22rpx;
  margin-left: 15rpx;
}
.pro-card .taste-icon::before{
  content: '';
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  background-image: url("data:image/svg+xml;base64,");
  background-repeat: no-repeat;
  background-size: 100%;
  margin-right: 10rpx;
}
.pro-card .icon-yuan-cn{
  font-size: 28rpx;
  color: #E41919;
}
.pro-card .price-wrapper{
  align-items: flex-end;
}
.pro-price{
  margin-left: 5rpx;
  font-family: Gobold;
  font-size: 32rpx;
}
.pro-card .vip-label{
  font-weight: bold;
  text-align: center;
  padding:2rpx 6rpx;
  border-radius: 4rpx;
  background: linear-gradient(to right, #ffffff, #FFF1F1);
  font-size: 18rpx;
  color: #E41919;
  line-height: 32rpx;
}
.group-buying_btn{
  background-color: #E41919;
  color: #fff;
  padding: 5rpx 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 8rpx;
  letter-spacing: 10rpx;
  align-self: flex-end;
}
