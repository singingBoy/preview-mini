<block>
    <view class="pro-card">
        <view class="pro-title">海虾</view>
        <view class="pro-subtitle">海虾营养成分丰富，味道鲜美，可做食膳也可做为药材使用</view>
        <swiper
            indicator-dots="{{false}}"
            autoplay="{{false}}"
            current="{{3}}"
            circular="{{true}}"
            previous-margin="{{100}}"
            next-margin="{{100}}"
            skip-hidden-item-layout="{{true}}"
            bindchange="onChange"
        >
            <block wx:for="{{images}}" wx:key="*this">
                <swiper-item>
                    <view class="d-flex image-wrapper {{current === index ? 'active' : 'no-active'}}">
                        <image class="pro-image"
                               mode="scaleToFill"
                               lazy-load="{{true}}"
                               src="{{item}}"
                        />
                        <view class="no-active-cover" hidden="{{current === index}}"/>
                    </view>
                </swiper-item>
            </block>
        </swiper>
        <view class="pro-footer">
            <view class="pro-statics d-flex">
                <view>
                    <text class="iconfont icon-attentionfavorfill"> 5902人看过</text>
                    <text class="iconfont taste-icon">4690人尝鲜</text>
                </view>
                <view class="d-flex price-wrapper">
                    <text class="iconfont icon-yuan-cn">
                        <text class="pro-price">99</text>
                    </text>
                    <view>
                        <text class="vip-label">会员优惠 20</text>
                    </view>
                </view>
            </view>
            <view></view>
        </view>
    </view>
</block>