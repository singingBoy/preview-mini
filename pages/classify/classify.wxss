page{
  background-color: #ffffff;
}
.classify-wrapper{
  background: linear-gradient(to right bottom, #ffffff, #ffffff, #FFF1F1);
}
/* 导航 */
.search-bar{
  width: 100%;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
}
.keys-list {
  width: 100%;
  height: 90rpx;
  margin-left: 30rpx;
}

/* 内容 */
.classify-left{
  overflow-y: scroll;
  flex-shrink: 0;
  background-color: #ffffff;
}
.classify-left-item{
  padding: 10rpx 30rpx;
  flex-direction: column;
}
.classify-left-item::after{
  content: '';
  height: 1rpx;
  width: 100rpx;
  display: block;
  background-color: rgba(0, 0, 0, 0.07);
}
.classify-left-item-active{
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  border-radius: 2rpx;
  background-color: #E41919;
}
.classify-left-item-image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 8rpx;
}
.classify-left-item-name{
  font-size: 30rpx;
  color: #676767;
  margin-bottom: 10rpx;
}
.classify-left-item-name-active{
  color: #2A2A2A;
  font-weight: bold;
}
.classify-right{
  overflow-y: scroll;
}
.classify-right-ad{
  height: 200rpx;
  width: 100%;
}
.classify-right-content{
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.classify-right-item{
  height: 44rpx;
  min-width: 120rpx;
  line-height: 44rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #676767;
}
